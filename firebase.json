{
  "hosting": {
    "public": ".",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
     
      {
        "source": "/who-we-are",
        "destination": "/who-we-are.html"
      },
      {
        "source": "/services", 
        "destination": "/services.html"
      },
      {
        "source": "/our-portfolio",
        "destination": "/our-portfolio.html"
      },
      {
        "source": "/blog",
        "destination": "/blog.html"
      },
      {
        "source": "/careers",
        "destination": "/careers.html"
      },
      {
        "source": "/get-in-touch",
        "destination": "/get-in-touch.html"
      },
      
      
      {
        "source": "/careers/:path*",
        "destination": "/careers/:path*.html"
      },
      {
        "source": "/categories/:path*",
        "destination": "/categories/:path*.html"
      },
      
      
      {
        "source": "/:path",
        "destination": "/:path.html"
      },
      
     
      {
        "source": "login.html",
        "destination": "/login.html"
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ],
    "headers": [
      
      {
        "source": "_next/static/**",
        "headers": [{
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }]
      },
      {
        "source": "assets/**",
        "headers": [{
          "key": "Cache-Control", 
          "value": "public, max-age=86400"
        }]
      }
    ],
    "cleanUrls": true,
    "trailingSlash": false
  }
}